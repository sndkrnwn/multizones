{
    "version": 2,
    "build": {
      "env": {
        "BUILDING_FOR_NOW": "true"
      }
    },
    "builds": [
      { "src": "client/package.json", "use": "@now/next" },
      { "src": "root/package.json", "use": "@now/next" }
    ],
    "routes": [
      { "src": "/client(.*)", "dest": "client$1" },
      { "src": "(.*)", "dest": "root$1" }
    ]
  }